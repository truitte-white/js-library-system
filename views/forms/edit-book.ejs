<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Book and Comment</title>
    <style>
        /* Optional: You can add your CSS styles here */
        .col-container {
            margin-top: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-control {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .form-select {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>

<div class="row">
    <div class="col-sm-6 col-md-6 offset-sm-3">
        <form id="edit-book-form" action="/books/<%= book.BookId %>" method="post">
            <div class="form-group">
                <label for="BookId">Book ID:</label>
                <input type="text" name="BookId" class="form-control" id="BookId" value="<%= book.BookId %>" readonly>
            </div>
            <div class="form-group">
                <label for="BookName">Book Name:</label>
                <input type="text" name="BookName" class="form-control" id="BookName" value="<%= book.BookName %>" required>
            </div>
            <div class="form-group">
                <label for="AuthorName">Author Name:</label>
                <input type="text" name="AuthorName" class="form-control" id="AuthorName" value="<%= book.AuthorName %>" required>
            </div>
            <div class="form-group">
                <label for="Genre">Book Genre:</label>
                <input type="text" name="Genre" class="form-control" id="Genre" value="<%= book.Genre %>" required>
            </div>
            <div class="form-group">
                <label for="PublishYear">Book Published Year:</label>
                <input type="text" name="PublishYear" class="form-control" id="PublishYear" value="<%= book.PublishYear %>" required>
            </div>
            <div class="form-group">
                <label for="BookStatus">Book Status:</label>
                <select name="BookStatus" class="form-select" id="BookStatus" required>
                    <option value="Available" <%= book.BookStatus === 'Available' ? 'selected' : '' %>>Available</option>
                    <option value="CheckedOut" <%= book.BookStatus === 'CheckedOut' ? 'selected' : '' %>>Checked Out</option>
                    <option value="Destroyed" <%= book.BookStatus === 'Destroyed' ? 'selected' : '' %>>Destroyed</option>
                    <option value="Lost" <%= book.BookStatus === 'Lost' ? 'selected' : '' %>>Lost</option>
                </select>
            </div>
            <button id="editbook" type="submit" class="btn">Edit Book</button>
        </form>
    </div>

    <div class="col-sm-6 col-md-6 offset-sm-3">
        <div style="background-color: aliceblue; padding: 10px;">
            <h2>Edit Comment</h2>
        </div>
        <form id="edit-comment-form" action="/books/edit-comment" method="post" style="background-color: white; padding: 20px; border: 1px solid #ccc;">
            <div class="form-group">
                <label for="CommentText">Comment:</label>
                <textarea name="CommentText" class="form-control" id="CommentText"><%= comment %></textarea>
            </div>
            <button type="submit" class="btn">Edit Comment</button>
        </form>
    </div>
</div>

</body>
</html>
