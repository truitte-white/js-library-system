<body>
    <h1>User Profile</h1>

    <% if (error) { %>
        <p><%= error %></p>
    <% } else { %>
        <h2>Welcome, <%= firstName %> <%= lastName %></h2>

        <h3>Borrowed Books:</h3>
        <% if (borrowedBooks.length === 0) { %>
            <p>No borrowed books.</p>
        <% } else { %>
            <ul>
                <% borrowedBooks.forEach(function(book) { %>
                    <li>
                        <%= book.title %> by <%= book.author %> 
                        (Borrowed on: <%= new Date(book.borrowDate).toLocaleDateString() %>)
                        <button onclick="returnBook('<%= book.bookId %>')">Return Book</button>
                        <button onclick="addComment('<%= book.bookId %>')">Add Comment</button>
                    </li>
                <% }); %>
            </ul>
        <% } %>
